/* miniprogram/pages/geo/geo.wxss */
.pd {
    padding:  0 20rpx;
}
.search-box{
    padding-top: 10rpx;
    padding-bottom: 10rpx;
    border: 1px solid #eee;
    border-radius: 5rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.search-input{
    background: #eee;
    font-size: 24rpx;
    padding: 5rpx 20rpx;
    border-radius: 35rpx;
    flex: 1;
}
.search-btn{
    padding-left: 20rpx;
}
.block{
  margin-top: 30rpx;
  padding: 0 25rpx;
}
.block .caption{
  font-size: 32rpx;
  color: #666;
}
.block .inner{
  display: flex;
  flex-wrap: wrap;
  /* justify-content: space-between; */

}
.block .item{
  margin-top: 20rpx;
  background: #eee;
  color:#333;
  width: 210rpx;
  text-align: center;
  padding: 15rpx 0;
  border-radius: 30rpx;
  margin-right: 25rpx;
}

/* 搜索结果 */
.search-result{
  padding: 0 25rpx;
}
.search-result .item{
  padding: 15rpx;
  border-bottom: 1px solid #eee;
}
.search-result .highlight{
  color: #6eb2f7;
}